<%- include('partials/header') %>
<link rel="stylesheet" href="/stylesheets/campgrounds.css">
    <div id="imagesPreview" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#imagesPreview" data-slide-to="0" class="active"></li>
            <li data-target="#imagesPreview" data-slide-to="1"></li>
            <li data-target="#imagesPreview" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="img-responsive preview" src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Yelpcamp</h1>
                    <p>View Campgrounds from all over the world</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-responsive preview" src="https://images.unsplash.com/photo-1487730116645-74489c95b41b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjI5MzI0fQ&auto=format&fit=crop&w=1350&q=80" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>...</h5>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-responsive preview" src="https://images.unsplash.com/photo-1508873696983-2dfd5898f08b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>...</h5>
                    <p>...</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#imagesPreview" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#imagesPreview" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container" id="popup">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
                <a class = "close">X</a>
            </div>
            <script>
                $(document).ready(function() {
                    setTimeout(function() {
                        $('div#popup').slideUp();
                    }, 3000);
                });
                $('a.close').click(function () {
                    $('div#popup').slideUp();
                })
            </script>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
                <a class = "close">X</a>
            </div>
            <script>
                $(document).ready(function() {
                    setTimeout(function() {
                        $('div#popup').slideUp();
                    }, 3000);
                });
                $('a.close').click(function () {
                    $('div#popup').slideUp();
                })
            </script>
        <% } %>
    </div>
    <div class="container">
        <div class="row text-center">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6 pad">
                    <div class="thumbnail">
                            <img src="<%= campground.coverImage %> " style="width:100%">
                            <div class="caption">
                                <% if(currentUser){ %>
                                    <p> <span class="imagename"><%= campground.name %></span>  <i class="fa fa-heart icon" id="icons" campgroundid = "<%= campground._id %>" aria-hidden="true"></i></p>
                                <% } else{ %>
                                    <p> <span class="imagename"><%= campground.name %></span></p>
                                <% } %> 
                            </div>
                            <p>
                                <a href="/campground/<%= campground._id %>" class="btn btn-primary">More info</a>
                            </p>
                    </div>
                </div> 
            <% }) %>  
        </div>
    </div>
    <script>
        $('i.icon').click(function () {
            var campgroundId = $(this).attr('campgroundid');
            // console.log(campgroundId);
            $.ajax({
                method: "POST",
                url: "/save",
                data: {campgroundId: campgroundId}
            })
            .done(function(){
                console.log("done");
            });
        })
    </script>
<%- include('partials/footer') %> 