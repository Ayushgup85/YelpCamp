    <div class="container" id="popup">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
                <a class = "close"><i class="fa fa-times-circle" aria-hidden="true"></i></a>
            </div>
            <script>
                $(document).ready(function() {
                    setTimeout(function() {
                        $('div#popup').slideUp();
                    }, 2500);
                });
                $('a.close').click(function () {
                    $('div#popup').slideUp();
                })
            </script>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
                <a class = "close"><i class="fa fa-times-circle" aria-hidden="true"></i></a>
            </div>
            <script>
                $(document).ready(function() {
                    setTimeout(function() {
                        $('div#popup').slideUp();
                    }, 2500);
                });
                $('a.close').click(function () {
                    $('div#popup').slideUp();
                })
            </script>
        <% } %>
    </div>
    <div class="container">
        <div class="row text-center">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6 pad">
                    <div class="thumbnail">
                            <img src="<%= campground.coverImage %> " style="width:100%">
                            <div class="caption">
                                <% if(currentUser){ %>
                                    <% if(campground.likes.includes(currentUser._id.toString())){ %>
                                        <p> <span class="imagename"><%= campground.name %></span>  <i class="fa fa-heart icon" id="icons" campgroundid = "<%= campground._id %>" aria-hidden="true"></i></p>
                                    <% } else{ %>
                                        <p> <span class="imagename"><%= campground.name %></span>  <i class="fa fa-heart-o icon-o" id="icons" campgroundid = "<%= campground._id %>" aria-hidden="true"></i></p>
                                    <% } %> 
                                <% } else{ %>
                                    <p> <span class="imagename"><%= campground.name %></span></p>
                                <% } %> 
                            </div>
                            <% if(campground.ratingCount > 0){ %>  
                                <% var rat = campground.ratingNumber/campground.ratingCount %>
                            <% } else { %>
                                <% var rat = 0 %>
                            <% } %>
                            <div class="Stars" style="--rating: <%= rat %> ;" aria-label="Rating of this product"></div>
                            <p>
                                <a href="/campground/<%= campground._id %>" class="btn btn-primary">More info</a>
                            </p>
                    </div>
                </div> 
            <% }) %>  
        </div>
    </div>
    <script>
        $('i.icon-o').click(function () {
            var campgroundId = $(this).attr('campgroundid');
            // console.log(campgroundId);
            $.ajax({
                method: "POST",
                url: "/save",
                data: {campgroundId: campgroundId}
            })
            .done(function(){
                console.log("done");
            });
            $(this).removeClass('fa-heart-o');
            $(this).addClass('fa-heart');
        })
    </script>
