<%- include('partials/header') %>
<link rel="stylesheet" href="/stylesheets/campgrounds.css">
    <div id="imagesPreview" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#imagesPreview" data-slide-to="0" class="active"></li>
            <li data-target="#imagesPreview" data-slide-to="1"></li>
            <li data-target="#imagesPreview" data-slide-to="2"></li>
            <li data-target="#imagesPreview" data-slide-to="3"></li>
            <li data-target="#imagesPreview" data-slide-to="4"></li>
            <li data-target="#imagesPreview" data-slide-to="5"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="img-responsive preview" src="/assets/carousel1.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Yelpcamp</h1>
                    <p>View Campgrounds from all over the world</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-responsive preview" src="/assets/carousel2.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Beautiful Night Views</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-responsive preview" src="/assets/carousel3.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Rediscover Nature</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-responsive preview" src="/assets/carousel4.jpg" alt="Fourth slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Breathtaking Views</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-responsive preview" src="/assets/carousel5.jpg" alt="Fifth slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Spend Time with Loved Ones</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="img-responsive preview" src="/assets/carousel6.jpg" alt="Sixth slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Experience Camping to it's Fullest</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#imagesPreview" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#imagesPreview" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container" id="popup">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
                <a class = "close"><i class="fa fa-times-circle" aria-hidden="true"></i></a>
            </div>
            <script>
                $(document).ready(function() {
                    setTimeout(function() {
                        $('div#popup').slideUp();
                    }, 2500);
                });
                $('a.close').click(function () {
                    $('div#popup').slideUp();
                })
            </script>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
                <a class = "close"><i class="fa fa-times-circle" aria-hidden="true"></i></a>
            </div>
            <script>
                $(document).ready(function() {
                    setTimeout(function() {
                        $('div#popup').slideUp();
                    }, 2500);
                });
                $('a.close').click(function () {
                    $('div#popup').slideUp();
                })
            </script>
        <% } %>
    </div>
    <div class="container">
        <div class="row">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-sm-12 col-md-6 col-lg-4 pad indexCards">
                    <div class="card thumbnail shadow border-0 mt-4">
                        <a href="/campground/<%= campground._id %>">
                            <img src="<%= campground.image %>" style="width:100%">
                        </a>
                        <% if(campground.pricing >= 200){ %>
                            <% var rate = "$$$" %>
                        <% } else if (campground.pricing >= 100){ %>
                            <% var rate = "$$" %> 
                        <% } else { %>
                            <% var rate = "$" %>
                        <% } %> 
                        <div class="card-body">
                            <h6 class="card-title text-capitalize" style="font-weight: 400 !important;">
                                <% if(currentUser){ %>
                                    <% if(campground.likes.includes(currentUser._id.toString())){ %>
                                        <a href="/campground/<%= campground._id %>" style="text-decoration: none;"> <span class="imagename"><%= campground.name %></span>&nbsp; &nbsp;</a><i class="fa fa-heart icon" id="icons" campgroundid = "<%= campground._id %>" aria-hidden="true"></i> 
                                        <p class="float-right text-muted"><%= rate %> </p>
                                    <% } else{ %>
                                        <a href="/campground/<%= campground._id %>" style="text-decoration: none;"> <span class="imagename"><%= campground.name %></span>&nbsp; &nbsp;</a><i class="fa fa-heart-o icon-o" id="icons" campgroundid = "<%= campground._id %>" aria-hidden="true"></i>
                                        <p class="float-right text-muted"><%= rate %> </p>
                                    <% } %> 
                                <% } else{ %>
                                    <a href="/campground/<%= campground._id %>" style="text-decoration: none;"> <span class="imagename"><%= campground.name %></span></a>
                                    <p class="float-right text-muted"><%= rate %> </p>
                                <% } %>
                            </h6>
                            <h6 class="card-subtitle">
                                <% if(campground.ratingCount > 0){ %>  
                                    <% var rat = campground.ratingNumber/campground.ratingCount %>
                                    <% if(campground.ratingCount > 1){ %> 
                                        <spam class="text-muted"><%= campground.ratingCount %> Reviews</spam>
                                    <% } else { %>
                                        <spam class="text-muted"><%= campground.ratingCount %> Review</spam>
                                        <% } %>  
                                    <div class="Stars" style="--rating: <%= rat %>;" aria-label="Rating of this product"></div>
                                <% } else { %>
                                    <spam class="text-muted">0 Reviews</spam>
                                <% } %>
                            </h6>
                        </div>
                        
                    </div>
                </div> 
            <% }) %>  
        </div>
    </div>
    <footer class="footer text-center text-muted m-5">
        <p>
            Â© YelpCamp 2020 | 
            <a href="/aboutus" class="text-muted" >About</a> | 
            <a href="https://github.com/shubhammehra4/YelpCamp" class="text-muted">Github</a>
        </p>
    </footer>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script>
        ScrollReveal().reveal('.indexCards', {
            interval: 150, mobile: true, viewFactor: 0.3
        });
    </script>
    <script>
        $('i.icon-o').click(function () {
            var campgroundId = $(this).attr('campgroundid');
            $.ajax({
                method: "POST",
                url: "/save",
                data: {campgroundId: campgroundId}
            })
            .done((res) => {
                $(this).removeClass('fa-heart-o');
                $(this).addClass('fa-heart');
                console.log(res);
            })
            .fail(function(err){
                console.log(err);
            })
        });
    </script>
<%- include('partials/footer') %> 