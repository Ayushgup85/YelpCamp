<% layout('layouts/boilerplate') %>
<div class="container p-4">
  <h1 class="text-center">New Campground</h1>
</div>
<div class="container">
  <form action="/campgrounds/new" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
    <div class="form-group">
      <label>Name<span class="red">*</span></label>
      <input class="form-control" type="text" placeholder="Name" name="campground[name]" required minlength="3"
        autofocus>
      <div class="invalid-feedback">
        Provide a Valid Campground Name
      </div>
    </div>
    <div class="form-group">
      <label>Image<span class="red">*</span></label>
      <input class="form-control" type="file" placeholder="Image" name="images" accept="image/*" multiple required>
      <div class="invalid-feedback">
        Please provide an Image.
      </div>
    </div>
    <div class="form-group">
      <label>Description<span class="red">*</span></label>
      <textarea class="form-control" name="campground[description]" placeholder="Description" minlength="3" cols="5"
        rows="2" required></textarea>
      <div class="invalid-feedback">
        Provide a Valid Description
      </div>
    </div>
    <div class="form-group">
      <label>Price<span class="red">*</span></label>
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input type="number" class="form-control" placeholder="1.00" min="1" name="campground[price]" required>
        <div class="invalid-feedback">
          Provide a Price.
        </div>
      </div>
      <span class="float-end text-muted">*$/night</span>
    </div>
    <div class="form-group">
      <label>Location<span class="red">*</span></label>
      <input class="form-control" type="text" placeholder="Yosemite National Park, CA" name="campground[location]"
        minlength="3" required>
      <div class="invalid-feedback">
        Provide a Valid Location.
      </div>
    </div>
    <div class="form-group">
      <label>Best Time to Visit</label>
      <div class="row">
        <div class="col-6">
          <input class="form-control" list="months" placeholder="Start" name="campground[startMonth]">
        </div>
        <div class="col-6">
          <input class="form-control" list="months" placeholder="End" name="campground[endMonth]">
        </div>
        <datalist id="months">
          <option value="January">
          <option value="February">
          <option value="March">
          <option value="April">
          <option value="May">
          <option value="June">
          <option value="July">
          <option value="August">
          <option value="September">
          <option value="October">
          <option value="November">
          <option value="December">
        </datalist>
      </div>
    </div>
    <div class="form-group">
      <label>Amenities</label>
      <input class="form-control" type="text" placeholder="Example: Boating, Fishing, Wi-fi"
        name="campground[facilities]">
      <small class="text-muted pull-right">separated by commas</small>
    </div>
    <div class="form-group text-center mt-5 mb-3">
      <button class="btn btn-success w-100">Create</button>
    </div>
  </form>
</div>
<style>
  form {
    width: 60%;
    margin: auto;
  }

  @media only screen and (max-width: 990px) {
    form {
      width: 80%;
    }
  }

  .form-group {
    margin-bottom: 10px;
  }

  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  input[type=number] {
    -moz-appearance: textfield;
  }
</style>
<script src="/scripts/formValidation.js"></script>