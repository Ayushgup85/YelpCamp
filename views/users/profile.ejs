<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/profile.css">
<div class="container mt-5 mb-3 " id="user">
    <div class="d-flex flex-wrap">
        <div class="ms-auto text-center">
            <div class="userLogo"><%= currentUser.name[0].toUpperCase() %> </div>
        </div>
        <div class="me-auto d-flex flex-column justify-content-center px-3"
            style="font-family: Arial, Helvetica, sans-serif;">
            <h1><%= currentUser.name %></h1>
            <p class="lead"><%= currentUser.email %></p>
        </div>
    </div>
</div>
<nav class="navbar navbar-expand-lg" id="profile">
    <div class="navbar-nav px-4" id="profile1">
        <a class="nav-item px-5 nav-link focused" id="campgrounds">Campgrounds <span
                class="sr-only">(current)</span></a>
        <a class="nav-item px-5 nav-link" id="likes">Likes</a>
    </div>
</nav>
<div id="campgroundsShow">
    <div class="container">
        <div class="row text-center">
            <% userCampgrounds && userCampgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 pad">
                <div class="thumbnail">
                    <img src="<%= campground.images[0].preview %>" class="img-fluid rounded">
                    <div class="caption">
                        <h1><%= campground.name %></h1>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary">View</a>
                    </p>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
<div id="likedShow" style="display: none;">
    <div class="container">
        <div class="row text-center">
            <% likedCampgrounds && likedCampgrounds.likes.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 pb-3">
                <div class="thumbnail">
                    <img src="<%= campground.images[0].preview %> " class="img-fluid rounded">
                    <div class="caption">
                        <h1><%= campground.name %></h1>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary">Visit</a>
                        <i class="fa fa-heart btn btn-outline-danger icon-unlike" campgroundId="<%= campground._id %>"
                            aria-hidden="true">&nbsp; Unlike</i>
                    </p>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
<script>
    const userId = "<%- currentUser._id %>";
</script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/scripts/profile.js"></script>