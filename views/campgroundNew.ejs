<%- include('partials/header') %>
    <div class="jumbotron">
        <h1 class="text-center">Create a new Campground</h1>
    </div>
    <div class="container">
        <form action="/campgrounds/new" method="post">
            <div class="form-group">
                <label>Name<span class="red">*</span></label>
                <input class="form-control" type="text" placeholder="Name" name="name" required autofocus>
            </div>
            <div class="form-group">
                <label>Image url<span class="red">*</span></label>
                <input class="form-control" type="url" placeholder="Image URL" name="image" required>
            </div>
            <div class="form-group">
                <label>Description<span class="red">*</span></label>
                <textarea class="form-control" name="description" placeholder="Description" cols="5" rows="2"></textarea>
            </div>
            <div class="form-group">
                <label>Pricing<span class="red">*</span></label>
                <input class="form-control" type="number" min="0" placeholder="Pricing" name="pricing" required><span class="pull-right">*Rs/night</span> 
            </div>
            <div class="form-group">
                <label>Booking</label>
                <input class="form-control" type="url" placeholder="Refer Link" name="refer">
                (Optional)
            </div>
            <div class="form-group">
                <label>Location<span class="red">*</span></label>
                <input class="form-control" type="text" placeholder="Address" name="address" required>
                <small>(Please Enter a valid Address)</small>
            </div>
            <label>Best Time to Visit</label> 
            <div class="form-group">
                <select name="startmonth" class="form-control pull-left" style="width: 45%;">
                    <option selected >Start</option>
                    <option value="Jan" >Jan</option>
                    <option value="Feb" >Feb</option>
                    <option value="Mar" >Mar</option>
                    <option value="Apr" >Apr</option>
                    <option value="May" >May</option>
                    <option value="Jun" >Jun</option>
                    <option value="Jul" >Jul</option>
                    <option value="Aug" >Aug</option>
                    <option value="Sep" >Sep</option>
                    <option value="Oct" >Oct</option>
                    <option value="Nov" >Nov</option>
                    <option value="Dec" >Dec</option>
                </select>
                <select name="endmonth" class="form-control pull-right" style="width: 45%;"> 
                    <option selected >End</option>
                    <option value="Jan" >Jan</option>
                    <option value="Feb" >Feb</option>
                    <option value="Mar" >Mar</option>
                    <option value="Apr" >Apr</option>
                    <option value="May" >May</option>
                    <option value="Jun" >Jun</option>
                    <option value="Jul" >Jul</option>
                    <option value="Aug" >Aug</option>
                    <option value="Sep" >Sep</option>
                    <option value="Oct" >Oct</option>
                    <option value="Nov" >Nov</option>
                    <option value="Dec" >Dec</option>
                </select>
            </div>
            <div class="form-group text-center" style="margin-top: 60px;">
                <button class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
    <style>
        form{
            width: 60%;
            margin: auto;
        }
        input.form-control{
            box-shadow: none !important;
        }
        .red{
            color: red;
        }
    </style>
<%- include('partials/footer') %>