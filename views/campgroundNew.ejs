<%- include('partials/header') %>
    <div class="jumbotron">
        <h1 class="text-center">Create a new Campground</h1>
    </div>
    <div class="container">
        <form action="/campgrounds/new" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Name" name="name" required autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="url" placeholder="Image URL" name="image" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description" placeholder="Description" cols="5" rows="5"></textarea>
                <!-- <input class="form-control" type="text-box" placeholder="Description" name="description" required> -->
            </div>
            <div class="form-group">
                <input class="form-control" type="number" min="0" placeholder="Pricing" name="pricing" required><span class="pull-right">*Rs/night</span> 
            </div>
            <div class="form-group">
                <input class="form-control" type="url" placeholder="Refer Link" name="refer">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Address" name="address">
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <style>
        form{
            width: 60%;
            margin: auto;
        }
        input.form-control{
            box-shadow: none !important;
        }
    </style>
<%- include('partials/footer') %>