<%- include('partials/header') %>
  <div class="jumbotron text-center">
    <h1>Edit <%= campground.name %> </h1>
  </div>
  <div class="container">
    <form action="/campground/<%= campground._id %>/edit?_method=PUT" method="post" class="needs-validation" novalidate>
      <div class="form-group">
        <label>Name<span class="red">*</span></label>
        <input class="form-control" type="text" placeholder="Name" name="campground[name]" value="<%= campground.name %>"
          required>
        <div class="invalid-feedback">
          Please provide a campground name.
        </div>
      </div>
      <div class="form-group">
        <label>Image url<span class="red">*</span></label>
        <input class="form-control" type="url" placeholder="Image URL" name="campground[image]"
          value="<%= campground.image %>" required>
        <div class="invalid-feedback">
          Please provide a Image.
        </div>
      </div>
      <div class="form-group">
        <label>Description<span class="red">*</span></label>
        <textarea class="form-control" name="campground[description]" placeholder="Description" cols="5" rows="2"
          required><%= campground.description %></textarea>
        <div class="invalid-feedback">
          Please provide a description of your campground.
        </div>
      </div>
      <div class="form-group">
        <label>Pricing<span class="red">*</span></label>
        <input class="form-control" type="number" min="0" placeholder="Price/Night" name="campground[pricing]"
          value="<%= campground.pricing %>" required><span class="pull-right text-muted">*$/night</span>
        <div class="invalid-feedback">
          Please provide a price.
        </div>
      </div>
      <div class="form-group">
        <label>Contact</label>
        <input class="form-control" type="text" placeholder="1234567891" name="campground[contact]"
          value="<%= campground.contact %>">
      </div>
      <div class="form-group">
        <label>Location<span class="red">*</span></label>
        <input class="form-control" type="text" placeholder="Yosemite National Park, CA" name="campground[location]"
          required value="<%= campground.location %>">
        <div class="invalid-feedback">
          Please enter a valid address.
        </div>
      </div>
      <label>Best Time to Visit</label>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <input class="form-control" list="months" placeholder="Start" name="campground[startMonth]"
              value="<%= campground.startMonth %> ">
          </div>
          <div class="col">
            <input class="form-control" list="months" placeholder="End" name="campground[endMonth]"
              value="<%= campground.endMonth %> ">
          </div>
          <datalist id="months">
            <option value="January">
            <option value="February">
            <option value="March">
            <option value="April">
            <option value="May">
            <option value="June">
            <option value="July">
            <option value="August">
            <option value="September">
            <option value="October">
            <option value="November">
            <option value="December">
          </datalist>
        </div>
      </div>
      <div class="form-group">
        <label>Amenities</label>
        <input class="form-control" type="text" placeholder="Example: boating, fishing, wifi" name="campground[amenities]"
          value="<%= campground.amenities %>">
        <small class="text-muted pull-right">separated by commas</small>
      </div>
      <div class="form-group text-center" style="margin-top: 60px;">
        <button class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
  <style>
    form {
      width: 60%;
      margin: auto;
    }

    input.form-control {
      box-shadow: none !important;
    }

    .red {
      color: red;
    }
  </style>
<%- include('partials/footer') %>