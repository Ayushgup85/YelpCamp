<%- include('partials/header') %>
    <% if(!campground){ %>
        <div class="container text-center">
            <p>Not a valid campground</p>
            <a href="/campgrounds">Go back to Campgrounds</a>
        </div>
    <% } else{ %>
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-header">YelpCamp</div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item active">Info 1</li>
                            <li class="list-group-item">Info 2</li>
                            <li class="list-group-item">Info 3</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="thumbnail">
                        <img class="img-fluid img-responsive rounded" src="<%= campground.coverImage %>">
                        <div class="caption">
                            <h4 class="pull-right">$9.00/night</h4>
                            <h4><a href="#"><%= campground.name %></a></h4>
                            <p class="p-5" style="color: blue; font-size: large;">
                                <%= campground.description %>
                            </p>
                        </div>
                    </div>
                    <div class="card">
                        <h4>Comments</h4>
                        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#exampleModalCenter">
                            New Comment
                        </button>
                        <!-- <br><br><br> -->
                        <hr>
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">New Comment - <strong><%= campground.name %></strong>
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <strong>Author : - </strong>
                                        <form action="/campground/<%= campground._id %>/comment" method="POST">
                                            <div class="form-group">
                                                <input class="form-control" type="text" name="comment" placeholder="Comment" required />
                                            </div>
                                            <div class="form-group">
                                                <button class="btn btn-primary">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                            <% campground.comments.forEach(function (comment) { %>
                                <div class="row">
                                    <div class="col-md-12">
                                        <strong><%= comment.author %></strong>
                                        <span class="pull-right">10 days ago</span>
                                        <p>
                                            <%= comment.text %>
                                        </p>
                                    </div>
                                </div>               
                            <% }) %> 
                            
                     </div>
                </div>
            </div>
        </div>
        
    <% } %>   
<%- include('partials/footer') %> 